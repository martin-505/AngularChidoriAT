<% include ../_header %>

    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h3>New Cerebro</h3>
            </div>
            <div class="card-body">
                <form action="/cerebros/new" method="POST">
                    <div class="form-group">
                        <input type="text" name="description" class="form-control" placeholder="Descripcion" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="flavor" class="form-control" placeholder="Sabor: chocolate o vainilla" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="price" class="form-control" placeholder="Precio" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="picture" class="form-control" placeholder="Foto" autofocus>
                    </div>
                    <% if(mensajeErrorC.length > 0){ %>

                        <div class="alert alert-danger" role="alert">
                            <%= mensajeErrorC %>
                        </div>

                        <% } %>

                            <% if(mensajeExitoC.length > 0){ %>

                                <div class="alert alert-success" role="alert">
                                    <%= mensajeExitoC %>
                                </div>

                                <% } %>
                                    <div class="form-group">
                                        <button class="btn btn-dark"> <i class="fas fa-brain"></i> Agregar</button>
                                    </div>
                </form>
            </div>
        </div>
    </div>
    <% include ../_footer %>