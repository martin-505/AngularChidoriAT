<% include _Header %>


    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h3>Delete Zombie</h3>
            </div>
            <div class="card-body">
                <form action="/zombie/delete/<%= zombie.id%>?_method=DELETE" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" value="<%= zombie.name %>" disabled>
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" value="<%= zombie.email %>" disabled>
                    </div>
                    <div class="form-group">
                        <input type="text" name="type" class="form-control" value="<%= zombie.type %>" disabled>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-dark"> <i class="fas fa-skull"></i> Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% include _footer %>