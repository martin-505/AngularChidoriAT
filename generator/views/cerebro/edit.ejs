<% include ../_Header %>

    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h3>Edit Zombie</h3>
            </div>
            <div class="card-body">
                <form action="/cerebro/edit/<%= cerebro.id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" name="description" class="form-control" value="<%= cerebro.flavor %>" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="flavor" class="form-control" value="<%= cerebro.description %>" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="price" class="form-control" value="<%= cerebro.price %>" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="picture" class="form-control" value="<%= cerebro.picture %>" required>
                    </div>
                    <% if(text!=false){%>

                        <% if(text.flavor)
                    {      
                    %>

                            <div class="alert alert-<%=clas %>">
                                <%=text.flavor.message %>
                            </div>
                            <%
                    }
                    %>
                                <% if(text.description)
                    {      
                    %>

                                    <div class="alert alert-<%=clas %>">
                                        <%=text.description.message %>
                                    </div>
                                    <%
                    }
                    %>
                                        <% if(text.iq)
                    {      
                    %>

                                            <div class="alert alert-<%=clas %>">
                                                <%=text.iq.message %>
                                            </div>
                                            <%
                    }
                    %>
                                                <% if(text.picture)
                    {      
                    %>

                                                    <div class="alert alert-<%=clas %>">
                                                        <%=text.picture.message %>
                                                    </div>
                                                    <%
                    }
                    %>
                                                        <%}%>
                                                            <%if(mensaje.length>0){%>
                                                                <div class="alert alert-<%=clas %>">
                                                                    <%=mensaje %>
                                                                </div>
                                                                <%}%>
                                                                    <div class="form-group">
                                                                        <button class="btn btn-dark"> <i class="fas fa-brain"></i> Guardar</button>
                                                                    </div>
                </form>
            </div>
        </div>
    </div>

    <% include ../_footer %>