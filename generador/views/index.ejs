<% include _header %>
    <div class="container">
        <h1>
            <%= title %>
        </h1>
        <h2>Lista de zombies</h2>
        <table class="table table-striped">
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Tipo</th>
                <th>Acciones</th>
            </tr>
            <%
            if(coleccion){
            coleccion.forEach(function(zombie){
        %>
                <tr>
                    <td>
                        <%= zombie.nombre %>
                    </td>
                    <td>
                        <%= zombie.email %>
                    </td>
                    <td>
                        <%= zombie.type %>
                    </td>
                    <td>
                        <a href="/zombies/edit/<%= zombie.id %>"><i class="fas fa-edit" title="Editar"></i></a>
                        <a href="/zombies/delete/<%= zombie.id %>"><i class="fas fa-trash text-danger" title="Eliminar"></i></a>
                    </td>
                </tr>
                <%
            });
            }
        %>
        </table>
        <a href="/zombies/add"><button class="btn btn-outline-success"><i class="fas fa-plus" style="margin: 5px;"></i>Agregar nuevo Zombie</button></a>
    </div>
    <% include _footer %>